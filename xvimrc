set im
set ignorecase
set hlsearch
set clipboard=unnamed
set relativenumber

" Edit from end
nnoremap <Space>e ea
nnoremap <Space>E Ea
" Insert single character
nnoremap <Space>i i_<ESC>r
" Comment line out/in
nnoremap <Space>/ I//<ESC>
nnoremap <Space>\ I<ESC>l2x
" Start/end comment block
nnoremap <Space>* 0i/*<ESC>
nnoremap <Space>** 0i*/<ESC>
" Easier black hole
nnoremap <Space>_ "_
nnoremap c "_c
nnoremap d "_d
nnoremap D "_D
nnoremap <Space>d d
nnoremap <Space>D D
" Easier undo
nnoremap U <C-r>
" Easier scroll
nnoremap J 3<C-e>
nnoremap K 3<C-y>
" Replace original functions from above
nnoremap <leader>J J
nnoremap <leader>K K
" Newline above/below
nnoremap <CR> o<ESC>
nnoremap <S-Enter> O<ESC>
" Window split movement
nnoremap <C-j> <C-W>j
nnoremap <C-k> <C-W>k
nnoremap <C-l> <C-W>l
nnoremap <C-h> <C-W>h
" Delete without copy
nnoremap d_ "_dd
" Insert a single character
nnoremap <C-i> i_<ESC>
" Jump to center after search
nnoremap n nzz
" Re-highlight after yank
vnoremap y ygv

" Xcode keymappings
nnoremap <space>b :xccmd toggleBreakpointAtCurrentLine<CR>
nnoremap <space>c :xccmd commentAndUncommentCurrentLines<CR>
